
@{
    ViewBag.Title = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Mentor Login</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/Css/Learner.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/jquery-3.1.1.js"></script>
    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</head>
<body>

    <div class="container">

        <div class="form-horizontal">
            <br />

            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title" style="text-align:center;">Mentors Portal</h3>
                </div>
                <div class="panel-body" style="text-align:left;">


                    <div class="logged">
                        @if (Session["FirstName"] != null || Session["Surname"] != null)
            {
                            <text>
                                Mentor: @Session["FirstName"].ToString()  @Session["Surname"].ToString()
                            </text>
                        }
                    </div>

                </div>
            </div>
           
            
            <h2>Send Email:</h2>

            <div class="form-group">

                <div class="col-xs-2">
                    <label for="mesage">Email:</label>
                    <input type="email" class="form-control" name="txtEmail" id="txtEmail"  placeholder="Enter Email Address" autofocus>

                </div>
            </div>



            <div class="form-group">

                <div class="col-xs-4">
                    <label for="comment">Comment:</label>
                    <textarea class="form-control" rows="5" id="body-message"></textarea>
                </div>


            </div>


            

                <input type="submit" name="btnsubmit" class="btn btn-primary" value="Send" />
                <input type="button" name="submit" class="btn btn-primary" value="Back" onclick="location.href='@Url.Action("Login", "Mentor")'" />
                <input type="button" name="submit" class="btn btn-primary" value="Register New Learner" onclick="location.href='@Url.Action("Register", "Mentor")'" />
                <input type="button" name="submit" class="btn btn-primary" value="Logbooks" onclick="location.href='@Url.Action("Download", "Mentor")'" />
            <input type="button" name="submit" class="btn btn-primary" value="Learners Database" onclick="location.href='@Url.Action("RegisteredLearners", "Registered")'" />
            <input type="button" name="submit" class="btn btn-primary" value="Download POA" onclick="location.href='@Url.Action("Downloads", "LearnersHome")'" />

                <input type="button" name="submit" class="btn btn-primary" value="Logout" onclick="location.href='@Url.Action("Logout", "Mentor")'" />



        </div>
      </div>
  

</body>
</html>

