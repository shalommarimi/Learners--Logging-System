
@{
    ViewBag.Title = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Register</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/Css/Learner.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/jquery-3.1.1.js"></script>
    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>


</head>
<body>

    <div class="container">
        <h2>Register New Learner</h2>

        <form class="form-horizontal" method="post" action="">
            <div class="form-group">
                <label class="control-label col-sm-2" name="name">Names:</label>
                <input type="text" class="form-control" name="txtName" id="txtName" placeholder="Enter Your Name" style="width:200px" autofocus>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" name="learner">Surname:</label>
                <input type="text" class="form-control" name="txtSurname" id="txtSurname" placeholder="Enter Your Surname" style="width:200px">
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2"> Gender:</label>
                <select class="form-control" id="sel1" style="width:200px">
                    <option>Male</option>
                    <option>Female</option>
                </select>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Date Of Birth:</label>
                <input type="date" class="form-control" name="txtDate" id="txtDate" style="width:200px">
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Identity Number:</label>
                <input type="number" class="form-control" name="txtID" id="txtID" placeholder="Enter Your Identity No" style="width:200px">
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Learnership:</label>
                <input type="text" class="form-control" name="txtLearner" id="txtLearner" placeholder="Learnership For" style="width:200px">
            </div>


            <div class="form-group">
                <label class="control-label col-sm-2">Mobile:</label>
                <input type="tel" class="form-control" id="txtMobile" name="txtMobile" placeholder="Enter Mobile Number" style="width:200px">
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Email:</label>
                <input type="email" class="form-control" id="txtEmail" name="txtEmail" placeholder="Enter Email Address" style="width:200px">
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <input type="submit" name="btnsubmit" class="btn btn-primary" value="Submit" />
                    <input type="submit" name="btnUpdate" class="btn btn-primary" value="Update" />
                    <input type="submit" name="btnRemove" class="btn btn-primary" value="Remove" />
                    <input type="button" name="submit" class="btn btn-primary" value="Back" onclick="location.href='@Url.Action("Sign", "Sign")'" />

                </div>
            </div>
          
        </form>




    </div>

</body>
</html>

