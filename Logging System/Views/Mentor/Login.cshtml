
@{
    ViewBag.Title = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Mentor Login</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/Css/Learner.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/jquery-3.1.1.js"></script>
    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</head>
<body>

    <div class="container">
        

        <form class="form-horizontal" method="post" action="/Mentor/DoLogin">
            <h2>Mentor Login Portal</h2>
            <div class="form-group">
                <label class="control-label col-sm-2">Username:</label>
                <input type="text" class="form-control" name="txtUsername" id="txtUsername" placeholder="Enter Username" style="width:200px" autofocus>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Password:</label>
                <input type="password" class="form-control" id="txtPassword" name="txtPassword" placeholder="Enter Password" style="width:200px">
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <input type="submit" name="btnsubmit" class="btn btn-primary" value="Login" />
                    <input type="submit" name="btnReset" class="btn btn-primary" value="Reset | Forgot Password" />
                    <input type="button" name="submit" class="btn btn-primary" value="Back Home" onclick="location.href='@Url.Action("Index", "Home")'" />
                </div>
            </div>
        </form>
       
      
       
      
    </div>

</body>
</html>

