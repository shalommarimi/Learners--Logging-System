
@{
    ViewBag.Title = "Learner";
    Layout = "~/Views/Shared/MasterPage.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Learner Login</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/Css/Learner.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/jquery-3.1.1.js"></script>
    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script>
        $('.has-clear input[type="text"]').on('input propertychange', function () {
            var $this = $(this);
            var visible = Boolean($this.val());
            $this.siblings('.form-control-clear').toggleClass('hidden', !visible);
        }).trigger('propertychange');

        $('.form-control-clear').click(function () {
            $(this).siblings('input[type="text"]').val('')
              .trigger('propertychange').focus();
        });
    </script>
</head>
<body>

    <div class="container">
        <h2>Learner Login Portal</h2>

        <form class="form" method="post" action="/Learner/DoLogin">
            <div class="form-group has-feedback has-clear">
                <label  class="control-label col-sm-2">Username:</label>
                <input type="text" class="form-control" name="txtUsername" id="txtUsername" placeholder="Enter Username" style="width:200px" autofocus>
                <span class="form-control-clear glyphicon glyphicon-remove form-control-feedback hidden"></span>
            </div>
            <div class="form-group has-feedback has-clear">
                <label  class="control-label col-sm-2">Password:</label>
                <input type="password" class="form-control" id="txtPassword" name="txtPassword" placeholder="Enter password" style="width:200px">
                <span class="form-control-clear glyphicon glyphicon-remove form-control-feedback hidden"></span>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <input type="submit" name="btnsubmit" class="btn btn-primary" value="Login" />
                    <input type="submit" name="btnReset" class="btn btn-primary" value="Reset | Forgot Password" />
                    <input type="button" name="btnHome" class="btn btn-primary" value="Back Home" onclick="location.href='@Url.Action("Index", "Home")'" />
                </div>
            </div>

        </form>
      
    </div>
      
</body>
</html>

